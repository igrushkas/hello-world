rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own data, and authenticated users can query for referral codes
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    // Allow referral count increment by any authenticated user
    match /users/{userId} {
      allow update: if request.auth != null
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['referralCount']);
    }
    // Meta collection for founding member counter etc.
    match /meta/{doc} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
