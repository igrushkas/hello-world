rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own data, and authenticated users can query for referral codes
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    // Allow referral count increment by any authenticated user
    match /users/{userId} {
      allow update: if request.auth != null
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['referralCount']);
    }
    // Meta collection for founding member counter etc.
    match /meta/{doc} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    // Feedback collection — any authenticated user can add
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && resource.data.uid == request.auth.uid;
    }
    // Waitlist collection — authenticated users can create/read their own entry
    match /waitlist/{docId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
    }
    // Daily feedback (quick checkbox form)
    match /daily_feedback/{docId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && resource.data.uid == request.auth.uid;
    }
    // Feedback notifications for owner
    match /feedback_notifications/{docId} {
      allow create: if request.auth != null;
    }
    // Testimonials — public read, authenticated create
    match /testimonials/{docId} {
      allow create: if request.auth != null;
      allow read: if true;
    }
  }
}
